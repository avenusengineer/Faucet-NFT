@page "/network"

<PageTitle>Network</PageTitle>
<RadzenContent Container="main">
    <RadzenHeading Size="H1" Text="Select network" />
    <RadzenTabs RenderMode="TabRenderMode.Client">
        <Tabs>
            <RadzenTabsItem Text="Ethereum">
                <NetworkList Data="@EthereumNetworks" />
            </RadzenTabsItem>
            <RadzenTabsItem Text="Polygon">
                <NetworkList Data="@PolygonNetworks" />
            </RadzenTabsItem>
            <RadzenTabsItem Text="Solana">
                <NetworkList Data="@SolanaNetworks" />
            </RadzenTabsItem>
        </Tabs>
    </RadzenTabs>
</RadzenContent>
